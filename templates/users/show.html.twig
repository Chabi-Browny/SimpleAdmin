{% extends 'base.html.twig' %}

{% block title %}Felhasználó{% endblock %}

{% block body %}
<div class="row">
    <div class="col hor-center">
        <h2>Felhasználó {{ user.username }}</h2>

        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Neve</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Jogosultság</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_users_index') }}" class="btn btn-outline-primary">Vissza a Listára</a>

        <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary">Szekesztés</a>

        {{ include('users/_delete_form.html.twig') }}            
    </div>
</div>
{% endblock %}
