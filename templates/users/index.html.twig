{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
<div class="row">
    <div class="col hor-center">
        <h2>Üdv {{ pageTitle }} oldalon!</h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Neve</th>
                    <th>Jogosultság</th>
                    {#<th>Password</th>#}
                    <th>Műveletek</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    {#<td>{{ user.password }}</td>#}
                    <td>
                        <a href="{{ path('app_users_show', {'id': user.id}) }}" class="btn btn-outline-primary">Mutat</a>
                        <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-outline-primary">Szerkeszt</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Nincs még felhasználók</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination | raw }}
        {{ pageSizer | raw }}

        <a href="{{ path('app_users_new') }}" class="btn btn-primary">Létrehozása</a>            
    </div>
</div>
{% endblock %}
