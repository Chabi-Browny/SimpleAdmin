{% extends 'base.html.twig' %}

{% block title %}Hello {{ pageTitle }}!{% endblock %}

{% block body %}

<div class="row">
    <div class="col hor-center">
        <h2>Üdv {{ pageTitle }}ben!</h2>
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Név</th>
                    <th scope="col">Email</th>
                    <th scope="col">Üzenet...</th>
                </tr>
            </thead>
            <tbody>
                {% if list is not empty %}
                    {% for item in list %}
                        <tr>
                            <th scope="row">{{ item.id }}</th>
                            <td>{{ item.name }}</td>
                            <td>{{ item.email }}</td>
                            <td><div class="wrapp-msg">{{ item.question }}</div></td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
        {{ pagination | raw }}
        {{ pageSizer | raw }}
    </div>
</div>
{% endblock %}
